<selector xmlns:android="http://schemas.android.com/apk/res/android" android:constantSize="true">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/dark_green"/>
            <corners android:radius="@dimen/button_corner"/>
            <padding android:bottom="@dimen/button_border" android:left="@dimen/button_side_padding" android:right="@dimen/button_side_padding"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#9E9E9E"/>
            <corners android:radius="@dimen/button_corner"/>
            <padding android:bottom="@dimen/button_border" android:left="@dimen/button_side_padding" android:right="@dimen/button_side_padding"/>
        </shape>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:angle="270"
                        android:startColor="@color/dark_green"
                        android:endColor="@color/green"/>
                    <corners android:radius="@dimen/button_corner"/>
                    <padding
                        android:bottom="@dimen/button_border"
                        android:top="@dimen/button_border"
                        android:left="@dimen/button_border"
                        android:right="@dimen/button_border" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:angle="90"
                        android:startColor="@color/dark_green"
                        android:endColor="@color/green"/>
                    <corners android:radius="@dimen/button_corner"/>
                </shape>
            </item>
        </layer-list>
    </item>

</selector>